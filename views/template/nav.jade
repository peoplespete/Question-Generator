#topBar.contain-to-grid.fixed
 nav.top-bar
   ul.title-area
     li.name
       h1: a(href="/") Grade-a-tron 3000v2
     li.toggle-topbar.menu-icon
       a(href="#")
         span Menu
   section.top-bar-section
    if user
      if user.isAdmin
        ul.left
          //- li.has-form: a.button.radius(href="/input") Input
          li.has-form: a.button.radius(href="/admin") User Control
     ul.right
       li.divider
       if user
        li.has-form: a#authentication-button.button.radius.alert(href="#", data-email="user.email")= user.username
       else
        li.has-form: a#authentication-button.button.radius(href="#", data-email="anonymous") Login | Sign Up
